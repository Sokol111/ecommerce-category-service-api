          "fields": [
            {
              "name": "attribute_id",
              "type": "string",
              "doc": "Unique attribute identifier (UUID)"
            },
            {
              "name": "name",
              "type": "string",
              "doc": "Display name of the attribute (denormalized from attribute-service)"
            },
            {
              "name": "slug",
              "type": "string",
              "doc": "URL-friendly identifier (denormalized from attribute-service)"
            },
            {
              "name": "type",
              "type": {
                "type": "enum",
                "name": "AttributeType",
                "symbols": ["single", "multiple", "range", "boolean", "text"],
                "doc": "Type of the attribute"
              },
              "doc": "Attribute type (denormalized from attribute-service)"
            },
            {
              "name": "unit",
              "type": ["null", "string"],
              "default": null,
              "doc": "Unit of measurement for range attributes (denormalized from attribute-service)"
            },
            {
              "name": "options",
              "type": {
                "type": "array",
                "items": {
                  "type": "record",
                  "name": "AttributeOption",
                  "doc": "Attribute option for single/multiple type attributes",
                  "fields": [
                    {
                      "name": "value",
                      "type": "string",
                      "doc": "Display value of the option"
                    },
                    {
                      "name": "slug",
                      "type": "string",
                      "doc": "URL-friendly identifier"
                    },
                    {
                      "name": "color_code",
                      "type": ["null", "string"],
                      "default": null,
                      "doc": "Color hex code (for color attributes)"
                    },
                    {
                      "name": "sort_order",
                      "type": "int",
                      "doc": "Sort order for display"
                    },
                    {
                      "name": "enabled",
                      "type": "boolean",
                      "doc": "Whether the option is enabled"
                    }
                  ]
                }
              },
              "default": [],
              "doc": "Available options for single/multiple type attributes (denormalized from attribute-service)"
            },
            {
              "name": "role",
              "type": {
                "type": "enum",
                "name": "AttributeRole",
                "symbols": ["variant", "specification"],
                "doc": "How an attribute is used in a category"
              },
              "doc": "Role of the attribute (variant creates product variants, specification describes the product)"
            },
            {
              "name": "required",
              "type": "boolean",
              "doc": "Whether the attribute is required for products in this category"
            },
            {
              "name": "sort_order",
              "type": "int",
              "doc": "Sort order for display"
            },
            {
              "name": "filterable",
              "type": "boolean",
              "doc": "Whether the attribute is filterable for this category"
            },
            {
              "name": "searchable",
              "type": "boolean",
              "doc": "Whether the attribute is searchable for this category"
            },
            {
              "name": "enabled",
              "type": "boolean",
              "doc": "Whether the attribute is enabled for this category"
            }
          ]
        }
      },
      "doc": "List of attributes assigned to this category",
      "default": []
    },
    {
      "name": "version",
      "type": "int",
      "doc": "Entity version for optimistic locking"
    },
    {
      "name": "created_at",
      "type": {
        "type": "long",
        "logicalType": "timestamp-millis"
      },
